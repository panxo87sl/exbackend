<h2>{{product.title}}</h2>
<p><strong>Precio:</strong> ${{product.price}}</p>
<p><strong>Categoría:</strong> {{product.category}}</p>
<p><strong>Descripción:</strong> {{product.description}}</p>

<form action="" method="POST" id="cartForm">
  <label for="cartSelect">Selecciona un carrito:</label>
  <select name="cartId" id="cartSelect">
    {{#each carts}}
      <option value="{{this._id}}">{{this._id}}</option>
    {{/each}}
  </select>
  <br /><br />
  <button type="submit">Agregar al carrito</button>
</form>

{{! Script para enviar la información y mostrar una alerta de "agregado correctamente" }}
<script>
  document.getElementById("cartForm").addEventListener("submit", function(e) { e.preventDefault(); const cartId = document.getElementById("cartSelect").value; const productId = "{{product._id}}";
  this.action = `/api/carts/${cartId}/products/${productId}`; alert("Producto agregado con éxito"); this.submit(); });
</script>